@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}


<h3 class="text-info mb-5 mt-5 text-center" style="font-size:40px;">Create an Account</h3>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-6">
            <div class="mb-2 form-check">
                <label asp-for="FirstName"></label><span class="text-danger fw-bold">*</span>
                <input type="text" asp-for="FirstName" class="mt-3  form-control" placeholder="Enter First Name" autocomplete="Email" />
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
            
        </div>
        <div class="col-6">
            <div class="mb-2 form-check">
                <label asp-for="LastName"></label><span class="text-danger fw-bold">*</span>
                <input type="text" asp-for="LastName" class="mt-3 form-control" placeholder="Enter Last Name" />
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-2 form-check">
                <label asp-for="BirthDate"></label><span class="text-danger fw-bold">*</span>
                <input type="date" asp-for="BirthDate" class="mt-3  form-control" />
                <span class="text-danger" asp-validation-for="BirthDate"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="mb-2 form-check">
                <label asp-for="Gender"></label><span class="text-danger fw-bold">*</span>
                <select asp-for="Gender" class="form-control mt-3">
                    <option value="">--Select Gender--</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Others</option>
                </select>
                <span class="text-danger" asp-validation-for="BirthDate"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-2 form-check">
                <label asp-for="Username"></label><span class="text-danger fw-bold">*</span>
                <input type="text" asp-for="Username" class="mt-3  form-control" placeholder="Enter Username" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="mb-2 form-check">
                <label asp-for="Email"></label><span class="text-danger fw-bold">*</span>
                <input type="email" asp-for="Email" class="mt-3  form-control" placeholder="Enter email" autocomplete="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-2 form-check">
                <label asp-for="Password"></label><span class="text-danger fw-bold">*</span>
                <input type="password" asp-for="Password" class="mt-3  form-control" placeholder="Enter Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="mb-2 form-check">
                <label asp-for="ConfirmPassword"></label><span class="text-danger fw-bold">*</span>
                <input type="password" asp-for="ConfirmPassword" class="mt-3  form-control" placeholder="Enter Password" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
    </div>
    
    <div class="mb-2 form-check">
        <label> 
            <input type="checkbox" asp-for="Status" checked="checked" class="form-check-inline" /><label asp-for="Status" class="form-label mb-2"></label>
        </label>
        
    </div>
   

    <div class="d-grid mt-3 ">
        <input type="submit" class="btn btn-outline-primary float-end" value="SignUp" />
    </div>
</form>

<center class="mt-5 mb-5">Already Have an Account? <a asp-action="Login" class="text-decoration-none flex-column"> Login</a></center>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
