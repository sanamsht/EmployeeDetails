
@{
    ViewData["Title"] = "Index";
    
}
@*@model WorkingWithMultipleTable_Prod.Models.ViewModel.CombinedViewModel*@
@model IEnumerable<WorkingWithMultipleTable_Prod.Models.Combined.EmployeeDepartmentModel>
<h1>List of Employees</h1>

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <div class="mt-5 mb-3 ">
                <a class="btn btn-warning text-white fw-bold mb-3 " asp-action="Index" asp-controller="Home"><i class="fa-solid fa-angles-left"></i> Back to DashBoard</a>
                <a class="btn btn-info text-white fw-bold float-end mb-3 " asp-action="Create"><i class="fa-solid fa-circle-plus"></i> Add Employee</a>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Employee Id</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Department Name</th>
                        <th>Department Code</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.EmployeeId</td>
                            <td>@item.FullName</td>
                            <td>@item.Gender</td>
                            <td>@item.DepartmentName</td>
                            <td>@item.DepartmentCode</td>
                            <td>
                                <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.EmployeeId"><i class="fa-solid fa-pen-to-square" title="Edit"></i></a>&nbsp;&nbsp;
                                <a asp-action="Details" class="btn btn-warning btn-sm" asp-route-id="@item.EmployeeId"><i class="fa-solid fa-eye" title="Details"></i></a>&nbsp;&nbsp;
                                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.EmployeeId" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa-solid fa-trash-can" title="Delete"></i></a>
                                </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
