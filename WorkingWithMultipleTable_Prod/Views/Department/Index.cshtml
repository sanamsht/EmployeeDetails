@using WorkingWithMultipleTable_Prod.Utility;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<WorkingWithMultipleTable_Prod.Models.Department>


<div class="container">
    <h1 class="text-center text-info">List of Departments</h1>
    <div class="row">
        <div class="col-10 offset-1">
            <div class="mt-5 mb-3">
                <a class="btn btn-warning btn-sm text-white fw-bold" asp-action="Index" asp-controller="Home">Back to Dashboard</a>
                <a class="btn btn-info btn-sm text-white fw-bold float-end" asp-action="Create">Add Department</a>
            </div>
            <table class="table table-bordered table-striped text-center">
                <thead>
                    <tr>
                        <th>Department Id</th>
                        
                        <th>Department Name</th>
                        <th>Department Code</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DepartmentId</td>
                            
                            <td>@Utilities.EveryStringFirstCapital(item.DepartmentName)</td>
                            <td>@item.DepartmentCode.ToUpper()</td>
                            <td class="text-center">
                                <a asp-action="Create" class="btn btn-primary btn-sm" asp-route-id="@item.DepartmentId"><i class="fa-solid fa-pen-to-square" title="Edit"></i></a>&nbsp;&nbsp;
                                <a asp-action="Details" class="btn btn-warning btn-sm"><i class="fa-solid fa-eye" title="Details"></i></a>&nbsp;&nbsp;
                                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.DepartmentId" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa-solid fa-trash-can" title="Delete"></i></a>
                               
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


