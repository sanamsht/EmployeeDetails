@using WorkingWithMultipleTable_Prod.Utility
@model List<WorkingWithMultipleTable_Prod.Models.Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-responsive">
                <thead class="bg-dark text-light text-center">
                    <tr>
                    <th>CustomerId</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Country</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Action</th>
                    
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td>@Helper.decryptText(item.CustomerId)</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Country</td>
                        <td>@item.Gender</td>
                        <td>@item.Email</td>
                        <td>@item.Age</td>
                        <td>
                             <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square" title="Edit"></i></a>&nbsp;&nbsp;
                                <a asp-action="Details" class="btn btn-warning btn-sm" asp-route-id="@item.Id"><i class="fa-solid fa-eye" title="Details"></i></a>&nbsp;&nbsp;
                                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa-solid fa-trash-can" title="Delete"></i></a>
                            </td>

                    </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>

